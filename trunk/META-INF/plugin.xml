<idea-plugin version="2">
  <name>ThisInserter</name>
  <description>Add "this." to the front of member variables and method calls</description>
  <version>1.0</version>
  <vendor>Me</vendor>
  <idea-version since-build="9732"/>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
      <action id="com.mike.thisinsert.InsertThis" class="com.mike.thisinsert.InsertThisAction" text="Add explicit this"
              description="Adds explicit this. in front of member variables and method calls">
          <add-to-group group-id="GenerateGroup" anchor="first"/>
          <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl T" second-keystroke="shift ctrl alt T"/>
      </action>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>
</idea-plugin>